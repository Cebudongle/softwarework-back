/**index.wxss**/

/*GitHub's logo*/

.github-icon {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.github-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

/*搜索框*/

.search {
  margin-top: 200rpx;
}

.search-input {
  border: 4rpx solid #3f4347;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
}

.search-button {
  float: right;
  margin-top: 20rpx;
  background-color: #3f4347;
  color: #fff;
  font-weight: bold;
}
